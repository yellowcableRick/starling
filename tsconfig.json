{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["index.ts", "modules/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
